<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/backgroiud"
    android:layout_height="match_parent"
    tools:context="com.example.eyasu.dhugaatokkicha.selectactiviy">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:alpha="0.6"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/head" />

    <Button
        android:id="@+id/offline"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_above="@+id/online"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:background="@drawable/offlinebutton" />

    <Button
        android:id="@+id/online"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/offline"
        android:layout_marginBottom="103dp"
        android:background="@drawable/onlinebutton" />
</RelativeLayout >
